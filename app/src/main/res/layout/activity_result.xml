<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".ui.ResultActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="503dp"
        android:layout_height="163dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169">

        <ImageView
            android:id="@+id/resultFinalImageView01"
            android:layout_width="164dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/random_tiger" />

        <ImageView
            android:id="@+id/resultFinalImageView02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/random_tiger" />

        <ImageView
            android:id="@+id/resultFinalImageView03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/random_tiger" />
    </LinearLayout>

    <ScrollView
        android:layout_width="677dp"
        android:layout_height="192dp"
        android:fillViewport="true"
        android:background="@drawable/playerdetail_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.785">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/resultDetailPlayerTextView"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:layout_height="match_parent"
                android:text="TextView"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043">

        <ImageButton
            android:id="@+id/gotoChooseActivityImageButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:onClick="gotoChooseActivityImageButton"
            app:srcCompat="@drawable/back_main_imagebutton"
            tools:ignore="OnClick" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>